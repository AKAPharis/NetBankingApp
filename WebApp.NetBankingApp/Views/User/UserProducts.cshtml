    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mt-1 mb-5">

        @if (Model.SavingAccounts != null)
        {
            @foreach (SavingAccountViewModel savingAccount in Model.SavingAccounts)
            {
                int lengthGuid = savingAccount.Guid.Length;

                <div class="col">
                    <div class="bg-white border-0 rounded-4 p-4 card-admin-dashboard">
                        <div class="d-flex">
                            <div class="cardColorGreen rounded-4 px-4 d-flex justify-content-center align-items-center col-auto">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="30"
                                     height="30"
                                     fill="#26C30C"
                                     class="bi bi-coin"
