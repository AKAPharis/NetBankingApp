                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z" />
                                    </svg>
                                </a>
                            </div>

                            <!-- Modal - Delete Product -->
                            <div class="modal fade p-4 py-md-5" tabindex="-1" role="dialog" id="@modalDeleteId" data-bs-backdrop="static">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content rounded-3 shadow">
                                        <div class="modal-body p-4 text-center">
                                            <h5 class="mb-3 fw-bold">Delete this product? @creditCard.Guid</h5>
                                            <p class="mb-0">You can always change your mind and go back.</p>
                                        </div>
                                        <div class="modal-footer flex-nowrap p-0">
                                            <a class="btn btn-lg btn-link hightlightedBTN fs-6 text-decoration-none col-6 py-3 m-0 rounded-0 border-end" asp-action="Delete" asp-controller="Credit" asp-route-Id="@creditCard.Id" asp-route-IdCustomer="@Model.IdCustomer"><strong>Yes, enable</strong></a>
                                            <button type="button" class="btn btn-lg btn-link hightlightedBTN fs-6 text-decoration-none col-6 py-3 m-0 rounded-0" data-bs-dismiss="modal">No thanks</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        }

    </div>

    <div class="d-flex justify-content-start align-items-center gap-2">
        <h3 class="mb-0">Loans</h3>
        <a asp-controller="Loan" asp-action="AddLoan" asp-route-id="@Model.IdCustomer"
           class="btn btn-light cardColorPink rounded-5 gap-2 d-flex justify-content-center align-items-center" style="color:#DB0000;">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="18"
                 height="18"
                 fill="#DB0000"
                 class="bi bi-plus-circle"
                 viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
            </svg>
            New
        </a>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mt-1">
        @if (Model.Loans != null)
        {
            @foreach (LoanViewModel loan in Model.Loans)
            {
                int lengthGuid = loan.Guid.Length;
                string modalDeleteId = $"DeleteModal{loan.Id}";

                <div class="col">
                    <div class="bg-white border-0 rounded-4 p-4 card-admin-dashboard">
                        <div class="d-flex">
                            <div class="cardColorPink rounded-4 px-4 d-flex justify-content-center align-items-center col-auto">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="30"
                                     height="30"
                                     fill="#DB0000"
                                     class="bi bi-journal-text"
                                     viewBox="0 0 16 16">
                                    <path d="M5 10.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5m0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5m0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5" />
                                    <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2" />
                                    <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1z" />
                                </svg>
                            </div>
                            <div class="ms-3 col-auto">
                                <small class="card-text mb-0 cardColorText">- @loan.Guid.Substring(lengthGuid - 4)</small>
                                <p class="card-text mb-0 cardColorText">Debt</p>
                                <p class="card-text fs-4 fw-bold">RD$ @loan.Debt</p>
                            </div>
                            <div class="col-auto">
                                <a href="#" data-bs-toggle="modal" data-bs-target="#@modalDeleteId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#DB0000" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z" />
                                    </svg>
                                </a>
                            </div>

                            <!-- Modal - Delete Product -->
                            <div class="modal fade p-4 py-md-5" tabindex="-1" role="dialog" id="@modalDeleteId" data-bs-backdrop="static">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content rounded-3 shadow">
                                        <div class="modal-body p-4 text-center">
                                            <h5 class="mb-3 fw-bold">Delete this product? @loan.Guid</h5>
                                            <p class="mb-0">You can always change your mind and go back.</p>
                                        </div>
                                        <div class="modal-footer flex-nowrap p-0">
                                            <a class="btn btn-lg btn-link hightlightedBTN fs-6 text-decoration-none col-6 py-3 m-0 rounded-0 border-end" asp-action="Delete" asp-controller="Loan" asp-route-Id="@loan.Id" asp-route-IdCustomer="@Model.IdCustomer"><strong>Yes, enable</strong></a>
                                            <button type="button" class="btn btn-lg btn-link hightlightedBTN fs-6 text-decoration-none col-6 py-3 m-0 rounded-0" data-bs-dismiss="modal">No thanks</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
