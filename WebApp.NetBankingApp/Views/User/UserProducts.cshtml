@using NetBankingApp.Core.Application.ViewModels.Home;
@using NetBankingApp.Core.Application.ViewModels.CreditCard;
@using NetBankingApp.Core.Application.ViewModels.Loan;
@using NetBankingApp.Core.Application.ViewModels.SavingAccount;
@using System;
@model CustomerHomeViewModel;
@{
    ViewData["Tittle"] = "Products";
}

<div class="container normalText p-4 px-5">

    <div class="d-flex justify-content-start align-items-center gap-2">
        <h3 class="mb-0">Savings accounts</h3>
        <a asp-controller="SavingAccount" asp-action="AddSavingAccount" asp-route-id="@Model.IdCustomer"
           class="btn btn-light cardColorGreen rounded-5 gap-2 d-flex justify-content-center align-items-center" style="color:#26C30C;">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="18"
                 height="18"
                 fill="#26C30C"
                 class="bi bi-plus-circle"
                 viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
            </svg>
            New
        </a>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mt-1 mb-5">

        @if (Model.SavingAccounts != null)
        {
            @foreach (SavingAccountViewModel savingAccount in Model.SavingAccounts)
            {
                int lengthGuid = savingAccount.Guid.Length;
                string modalDeleteId = $"DeleteModal{savingAccount.Id}";

                <div class="col">
                    <div class="bg-white border-0 rounded-4 p-4 card-admin-dashboard">
                        <div class="d-flex">
                            <div class="cardColorGreen rounded-4 px-4 d-flex justify-content-center align-items-center col-auto">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="30"
                                     height="30"
                                     fill="#26C30C"
                                     class="bi bi-coin"
                                     viewBox="0 0 16 16">
                                    <path d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.435 1.048.91 0 .542-.412.914-1.135.982V8.518z" />
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                    <path d="M8 13.5a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11m0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12" />
                                </svg>
                            </div>
                            <div class="ms-3 col-auto">
                                <small class="card-text mb-0 cardColorText">- @savingAccount.Guid.Substring(lengthGuid - 4)</small>
                                <p class="card-text mb-0 cardColorText">Available balance</p>
                                <p class="card-text fs-4 fw-bold">RD$ @savingAccount.Savings</p>
                            </div>
                            @if (!savingAccount.IsMain)
                            {
                                <div class="col-auto">
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#@modalDeleteId">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#DB0000" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z" />
                                        </svg>
                                    </a>
                                </div>

                                <!-- Modal - Delete Product -->
                                <div class="modal fade p-4 py-md-5" tabindex="-1" role="dialog" id="@modalDeleteId" data-bs-backdrop="static">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content rounded-3 shadow">
                                            <div class="modal-body p-4 text-center">
                                                <h5 class="mb-3 fw-bold">Delete this product? @savingAccount.Guid</h5>
                                                <p class="mb-0">You can always change your mind and go back.</p>
                                            </div>
                                            <div class="modal-footer flex-nowrap p-0">
                                                <a class="btn btn-lg btn-link hightlightedBTN fs-6 text-decoration-none col-6 py-3 m-0 rounded-0 border-end" asp-action="Delete" asp-controller="SavingAccount" asp-route-Id="@savingAccount.Id" asp-route-IdCustomer="@Model.IdCustomer"><strong>Yes, enable</strong></a>
                                                <button type="button" class="btn btn-lg btn-link hightlightedBTN fs-6 text-decoration-none col-6 py-3 m-0 rounded-0" data-bs-dismiss="modal">No thanks</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }

    </div>

    <div class="d-flex justify-content-start align-items-center gap-2">
        <h3 class="mb-0">Credit cards</h3>
        <a asp-controller="Credit" asp-action="AddCreditCard" asp-route-id="@Model.IdCustomer"
           class="btn btn-light cardColorBlueGreen rounded-5 gap-2 d-flex justify-content-center align-items-center" style="color:#1B998B;">
