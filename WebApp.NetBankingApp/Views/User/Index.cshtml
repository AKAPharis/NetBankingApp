@using NetBankingApp.Core.Application.ViewModels.Account;
@model LoginViewModel;
@{
    ViewData["Tittle"] = "Login";
}

<div class="container-fluid vh-100 vw-100 p-0">
    <div class="position-absolute vh-100 vw-100 yentonce">
        <img src="~/assets/images/login-image.jpg" class="bg-image" alt="Landscape" />
    </div>
    <div class="container vh-100 vw-100 d-flex align-items-center justify-content-center">
        <div class="col-sm-9 col-md-7 col-lg-5 rounded-5 bg-white d-flex align-items-center justify-content-center h-75 py-5 px-1 box-shadow">
            <div class="col-12 d-flex justify-content-center align-content-center">
                <div class="col-8">
                    <div class="">
                        <div class="text-center mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="#E3B71B" class="bi bi-coin" viewBox="0 0 16 16">
                                <path d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.435 1.048.91 0 .542-.412.914-1.135.982V8.518z" />
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                <path d="M8 13.5a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11m0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12" />
                            </svg>
                        </div>
                        <div class="text-center">
                            <h2 class="tittle fw-bold">Danderi Bank</h2>
                            <p class="fw-bold">Welcome back!</p>
                        </div>
                    </div>
                    
                    <form method="post" asp-controller="User" asp-action="Index">

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label darkBlueText fw-bold">Username</label>
                            <input asp-for="Username" class="form-control">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label darkBlueText fw-bold">Password</label>
                            <input asp-for="Password" class="form-control" id="exampleFormControlInput2">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div>
                            <button type="submit" class="btn darkBlueBg btn-dark fw-bold w-100">Login</button>
                        </div>

                    </form>
                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger alert-dismissible mt-3 fade show" role="alert">
                            <p class="mb-0">@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>