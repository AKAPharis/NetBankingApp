@using NetBankingApp.Core.Application.ViewModels.CreditCard;
@model SaveCreditCardViewModel;
@{
    ViewData["Tittle"] = "Add Credit Card";
}

<div class="container normalText p-4 px-5">
    <div class="row">
        <h2 class="text-dark p-0 mb-4 text-center">Add loan account</h2>
        <div class="d-flex justify-content-center">
            <div class="py-5 px-5 bg-white rounded-4 col-6">
                <form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Register">
                    <div class="mb-4 d-flex justify-content-center">
                        <div class="col-8">
                            <div class="">
                                <label asp-for="LimitAmount" class="form-label fw-bold">Limit</label>
                                <input asp-for="LimitAmount" class="form-control inputCustomize">
                                <span asp-validation-for="LimitAmount" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="col-8">
                            <button type="submit" class="btn btn-info w-100 fw-bold">Add</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
