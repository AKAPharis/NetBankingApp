@using NetBankingApp.Core.Application.ViewModels.CreditCard
@using NetBankingApp.Core.Application.ViewModels.Payment
@using NetBankingApp.Core.Application.ViewModels.SavingAccount

@model CreditPaymentViewModel
@{
    ViewData["Title"] = "Credit payment";

}


<div class="container normalText p-4 px-5">
    <div class="row">
        <h2 class="text-dark p-0 mb-4 text-center">Credit payment</h2>

        <div class="d-flex justify-content-center">
            <div class="py-5 px-5 bg-white rounded-4 col-6">

                <form method="post" asp-controller="Pay" asp-action="CreditPayment">
                    <div class="d-flex justify-content-center">
                        <div class="col-8">

                            @if (Model.HasError)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <p class="mb-0">@Model.Error</p>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <div class="mb-3">
                                <label asp-for="SavingAccountGuid" class="form-label fw-bold">Saving Account</label>
                                <select asp-for="SavingAccountGuid" class="form-select">
                                    <option value="0">@(Model.SavingAccounts != null && Model.SavingAccounts.Count > 0 ? "Choose one saving account" : "There's no saving accounts, sorry")</option>
                                    @if (Model.SavingAccounts != null && Model.SavingAccounts.Count > 0)
                                    {

                                        foreach (SavingAccountViewModel savingAccount in Model.SavingAccounts)
                                        {
                                            <option value="@savingAccount.Guid">@savingAccount.Guid</option>

                                        }
                                    }

                                </select>
                                <span asp-validation-for="SavingAccountGuid" class="text-danger"></span>

                            </div>

                            <div class="mb-3">
                                <label asp-for="CreditCardGuid" class="form-label fw-bold">Credit card</label>
                                <select asp-for="CreditCardGuid" class="form-select">
                                    <option value="0">@(Model.CreditCards != null && Model.CreditCards.Count > 0 ? "Choose one credit card" : "There's no credit cards, sorry")</option>
                                    @if (Model.CreditCards != null && Model.CreditCards.Count > 0)
                                    {

                                        foreach (CreditCardViewModel creditCard in Model.CreditCards)
                                        {
                                            <option value="@creditCard.Guid">@creditCard.Guid</option>

                                        }
                                    }

                                </select>
                                <span asp-validation-for="SavingAccountGuid" class="text-danger"></span>

                            </div>

                            <div class="mb-3">
                                <label asp-for="Amount" class="form-label fw-bold">Amount</label>
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="col-8 d-flex gap-2">
                            <div class="col-auto">
                                <a asp-controller="Home" asp-action="CustomerHome" class="btn btn-outline-secondary w-100">Back</a>
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-info w-100">Save</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

