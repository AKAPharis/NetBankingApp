@using NetBankingApp.Core.Application.ViewModels.CreditCard
@using NetBankingApp.Core.Application.ViewModels.Loan
@using NetBankingApp.Core.Application.ViewModels.Payment
@using NetBankingApp.Core.Application.ViewModels.SavingAccount

@model LoanPaymentViewModel
@{
    ViewData["Title"] = "Loan payment";

}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header card-header-color">
                    <h4>Loan payment</h4>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p>@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form method="post" asp-controller="Pay" asp-action="LoanPayment">


                        <div class="mb-3">
                            <label asp-for="SavingAccountGuid" class="form-label">Saving Account:</label>
                            <select asp-for="SavingAccountGuid" class="form-select">
                                <option value="0">@(Model.SavingAccounts != null && Model.SavingAccounts.Count > 0 ? "Choose one saving account" : "There's no saving accounts, sorry")</option>
                                @if (Model.SavingAccounts != null && Model.SavingAccounts.Count > 0)
                                {

                                    foreach (SavingAccountViewModel savingAccount in Model.SavingAccounts)
                                    {
                                        <option value="@savingAccount.Guid">@savingAccount.Guid</option>

                                    }
                                }

                            </select>
                            <span asp-validation-for="SavingAccountGuid" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label asp-for="LoanGuid" class="form-label">Loan:</label>
                            <select asp-for="LoanGuid" class="form-select">
                                <option value="0">@(Model.Loans != null && Model.Loans.Count > 0 ? "Choose one loan" : "There's no loans, sorry")</option>
                                @if (Model.Loans != null && Model.Loans.Count > 0)
                                {

                                    foreach (LoanViewModel loan in Model.Loans)
                                    {
                                        <option value="@loan.Guid">@loan.Guid</option>

                                    }
                                }

                            </select>
                            <span asp-validation-for="SavingAccountGuid" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Amount:</label>
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>


                        <button type="submit" class="btn btn-success">Save</button>
                        <a asp-controller="Pay" asp-action="Index" class="btn btn-warning">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

