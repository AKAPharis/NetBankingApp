@using NetBankingApp.Core.Application.ViewModels.Beneficiary
@model SaveBeneficiaryViewModel
@{
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header card-header-color">
                    <h4>Are you sure you want delete the beneficiary @Model.NickName?</h4>
                </div>
                <div class="card-body card-body-color">
                    <form method="post" asp-controller="Beneficiary" asp-action="Delete">



                        <input type="hidden" asp-for="IdBeneficiary" />
                        <input type="hidden" asp-for="IdUser" />

                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-controller="Beneficiary" asp-action="Index" class="btn btn-warning">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

